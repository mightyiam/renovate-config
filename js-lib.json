{
  "extends": [
    ":automergeMinor"
  ],
  "rangeStrategy": "auto",
  "travis": {
    "enabled": true
  },
  "node": {
    "major": {
      "enabled": true
    },
    "supportPolicy": [
      "all"
    ]
  },
  "packageRules": [
    {
      "packagePatterns": [
        "^typescript$"
      ],
      "automerge": false
    },
    {
      "packagePatterns": [
        "^eslint-config-",
        "\/eslint-plugin$",
        "^@typescript-eslint\/$"
      ],
      "groupName": "eslint packages",
      "separateMajorMinor": false
    }
  ]
}
