{
  "extends": [
    ":automergeMinor"
  ],
  "semanticCommitScope": "deps",
  "semanticCommitType": "auto",
  "rangeStrategy": "auto",
  "travis": {
    "enabled": true
  },
  "node": {
    "major": {
      "enabled": true
    },
    "supportPolicy": "current"
  },
  "packageRules": [
    {
      "packagePatterns": [
        "^eslint-config-",
        "\/eslint-plugin$",
        "^@typescript-eslint\/parser$"
      ],
      "groupName": "eslint packages",
      "separateMajorMinor": false
    }
  ]
}
